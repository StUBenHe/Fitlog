.container {
  padding: 40rpx;
}

.add-btn {
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
}

.add-text {
  font-size: 32rpx;
}

.category-grid {
  margin-top: 40rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.category-item {
  background: #ffffff;
  border: 1px solid #ddd;
  border-radius: 12rpx;
  padding: 30rpx;
  text-align: center;
}
.item-grid {
  margin-top: 40rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.item {
  background: #fafafa;
  border: 1px solid #ccc;
  border-radius: 12rpx;
  padding: 30rpx;
  text-align: center;
}

.amount-panel {
  margin-top: 40rpx;
  text-align: center;
}

.food-name {
  font-size: 36rpx;
  margin-bottom: 30rpx;
}

.stepper {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 40rpx;
}

.btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.amount {
  font-size: 32rpx;
}

.kcal {
  margin-top: 20rpx;
  color: #666;
}

.confirm-btn {
  margin-top: 40rpx;
  padding: 24rpx;
  background: #07c160;
  color: white;
  border-radius: 12rpx;
}

.diet-list {
  margin-top: 40rpx;
}

.diet-header,
.diet-row {
  display: grid;
  grid-template-columns: 1.2fr 1fr 1fr;
  padding: 16rpx 0;
}

.diet-header {
  font-weight: bold;
  border-bottom: 1px solid #ccc;
}

.diet-row {
  border-bottom: 1px solid #eee;
}

.diet-total {
  margin-top: 20rpx;
  font-weight: bold;
  text-align: right;
}




.bottom-back {
  position: fixed;
  left: 0;
  bottom: 0;

  width: 100%;
  padding: 20rpx;

  background: #ffffff;
  box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.05);

  z-index: 999;
}

.diet-header,
.diet-row {
  display: grid;
  grid-template-columns: 1.2fr 1fr 1fr 1fr;
  gap: 8rpx;
  padding: 12rpx 0;
  font-size: 26rpx;
}

.diet-header {
  font-weight: bold;
  border-bottom: 1px solid #eee;
}

.diet-row {
  border-bottom: 1px solid #f5f5f5;
}

.col {
  white-space: nowrap;
}

.kcal,
.protein {
  text-align: right;
}

.diet-total {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #333;
}
