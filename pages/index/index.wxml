<view class="page">
  <view class="card">
    <view class="title">基本信息</view>

    <!-- 性别 -->
    <view class="row">
      <text class="label">性别</text>
      <radio-group class="radio-group" bindchange="onGenderChange">
        <label class="radio">
          <radio value="male" checked="{{form.gender === 'male'}}" /> 男
        </label>
        <label class="radio">
          <radio value="female" checked="{{form.gender === 'female'}}" /> 女
        </label>
      </radio-group>
    </view>

    <!-- 年龄 -->
    <view class="row">
      <text class="label">年龄</text>
      <view class="input-wrap">
        <input type="number" value="{{form.age}}" bindinput="onInput" data-key="age" />
        <text class="unit">岁</text>
      </view>
    </view>

    <!-- 身高 -->
    <view class="row">
      <text class="label">身高</text>
      <view class="input-wrap">
        <input type="number" value="{{form.height}}" bindinput="onInput" data-key="height" />
        <text class="unit">cm</text>
      </view>
    </view>

    <!-- 体重 -->
    <view class="row">
      <text class="label">体重</text>
      <view class="input-wrap">
        <input type="number" value="{{form.weight}}" bindinput="onInput" data-key="weight" />
        <text class="unit">kg</text>
      </view>
    </view>

    <!-- 体脂率 -->
    <view class="row">
      <text class="label">体脂率</text>
      <view class="input-wrap">
        <input type="number" value="{{form.bodyFat}}" bindinput="onInput" data-key="bodyFat" />
        <text class="unit">%</text>
      </view>
    </view>

    <button class="btn" bindtap="onSubmit">下一步</button>
  </view>
</view>
